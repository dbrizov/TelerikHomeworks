@model Twitter.Application.Models.ApplicationUserViewModel

<div class="row-fluid">
    <div class="span12 my-container">
        <h2 class="text-center">@Model.UserName's tweets</h2>
        <div class="lead">
            @foreach (var tweet in Model.Tweets)
            {
                <div class="tweet">
                    <a href="~/Tweets/All/@tweet.User.UserName">@tweet.User.UserName</a>
                    <div>@tweet.Text</div>
                    <div>@tweet.PostDate</div>
                </div>
            }
        </div>
    </div>
</div>

